<a href="/">Retour</a>
  <div class="row">
     <div class="col-md-6 col-md-offset-3">
       <h1><%= @article.title %></h1>
       <p><%= @article.text %></p>
     </div>
   </div>
    <div class="row">
     <div class="col-md-6 col-md-offset-3">
     <table class="table table-bordered">
      <tr>
      	<td>Pseudo</td>
        <td>Commentaire</td>
      </tr>
       <% @article.comments.each do |comment|%>
         <tr>
           <td><%= comment.author %></td>
           <td><%= comment.content %></td>
         </tr>
       <%end%>
       </table>
       </div>
       </div>
  <div class="row">
  	<div class="col-md-6 col-md-offset-3">
       <%= form_tag "/articles/#{@article.id}", method: "post" do %>
         <input type="text" name="author" placeholder="Pseudo" required/>
         <textarea class="form-control" placeholder="Votre commentaire" rows="3" name="content" required>
         </textarea>
         <input type="submit" value="Valider" />
       <% end %>
    </div>
  </div>